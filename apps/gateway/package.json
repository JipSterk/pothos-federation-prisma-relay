{
  "name": "@acme/gateway",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd --rs --inspect=5000 src/index.ts",
    "start": "node ./dist/index.js",
    "codegen:supergraph": "rover supergraph compose --config ../../supergraph.yml > ./supergraph.gql",
    "build": "pnpm build:clean && pnpm build:cjs",
    "build:clean": "git clean -dfX dist",
    "build:cjs": "swc src -d dist --config-file ../../.swcrc"
  },
  "dependencies": {
    "@apollo/gateway": "2.3.2",
    "@apollo/server": "4.4.0",
    "body-parser": "1.20.1",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "graphql": "16.6.0"
  },
  "devDependencies": {
    "@acme/tsconfig": "workspace:0.0.1",
    "@types/body-parser": "1.19.2",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/node": "18.13.0",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "ts-node-dev": "2.0.0",
    "typescript": "4.9.5"
  }
}
