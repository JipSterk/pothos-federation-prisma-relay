{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@acme/tsconfig/vite.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dts",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.stories.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
