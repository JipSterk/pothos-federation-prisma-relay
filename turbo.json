{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_BACKEND_URL"],
      "outputs": ["dist/**", ".next/**"]
    },
    "db:migrate:deploy": {},
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
